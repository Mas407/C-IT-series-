 cout<<"Enter the Character :: > ";
 cin>>ch;
 switch(ch){
   case 'a':
   case 'A':
   cout<<"You Entered a vowels ";
   break ;
   case 'e':
   case 'E':
   cout<<"You Entered a vowels ";
   break ;
   case 'i':
   case 'I':
   cout<<"You Entered a vowels ";
   break ;
   case 'O':
   case 'o':
   cout<<"You Entered a vowels ";
   break ;
   case 'U':
   case 'u':
   cout<<"You Entered a vowels ";
   break ;

   default:
   cout<<"Invalid ";
   break;

 }

float a,b;
char n;
cout<<"Enter a floating point number :: > ";
cin>>a;
cout<<"Enter the operator ";
cin>>n;
cout<<"Enter a secound floating point number ";
cin>>b;
switch(n){
   case '*':cout<<"The product of the number is ::> "<<a*b;
break;
case '+':cout<<"The Adition  of the number is ::> "<<a+b;
break;
case '-':cout<<"The substraction of the number is ::> "<<a-b;
break;
case '/':cout<<"The division of the number is ::> "<<a/b;
break;
default:cout<<"Invalid";
break;
}

program 28

cout<<"Enter 1 to convert Fahrenheit to Centigrade "<<endl;
cout<<"Enter 2 to convert Centigrade to Fahrenheit "<<endl;
int opp;
float t,t1,t2;
cout<<"Enter the opption :: ";
cin>>opp;
switch(opp){
case 1:cout<<"Enter the temperature ";
cin>>t;
t1=(t-32)*5.0/9.0;
cout<<t1;
break;
case 2:cout<<"Enter the temperature ";
cin>>t;
t2=(9.0/5.0)*t+32;
cout<<t2;
break;
default:
cout<<"INVALID";
break;

}


Program 29

cout<<"Enter 1 to calculate the cube "<<endl;
cout<<"Enter 2 to to check the cylinder :: "<<endl;
cout<<"Enter 3 to check the volume :: > "<<endl;
int opp,c,radius,height;
cout<<"Enter the choice :: > ";
cin>>opp;
switch(opp){
   case 1:cout<<"Enter the side of the cude :: ";
   cin>>c;
   cout<<c*c*c;
break;
case 2:cout<<"Enter the Radius of the cylinder :: ";
cin>>c;
cout<<"Enter the height of the cylinder :: > ";
cin>>height;
cout<<c*c*M_PI*height;
break;
case 3:cout<<"Enter the radius of the  sphere :: ";
cin>>c;
cout<<(4.0/3.0)*c*c*c*M_1_PI;
break;


}

