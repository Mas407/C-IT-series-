Program 16

int call,bill,a=200;
cout<<"Enter the number of calls :: ";
cin>>call;
if(call<=100)
bill=200;
else if(call<=150)
bill=a+(50*0.60);
else if(call<=200)
bill=a+(50*0.60)+(50*0.50);
else
bill=a+(50*0.60)+(50*0.50)+(call-200)*0.40;
cout<<bill;

