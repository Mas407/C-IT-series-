Program 13


    int h, m;
    cout << "Enter time (HH MM): ";
    cin >> h >> m;

    if (h == 0) 
            cout << "Standard Time: 12:" << m << " AM" << endl;
    else if (h < 12) 
        cout << "Standard Time: " << h << ":" << m << " AM" << endl;
    else if (h == 12) 
        cout << "Standard Time: " << h << ":" << m << " PM" << endl;
    else 
        cout << "Standard Time: " << h - 12 << ":" << m << " PM" << endl;


